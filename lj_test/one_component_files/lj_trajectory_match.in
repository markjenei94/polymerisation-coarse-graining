########		#########
#				#
# 1) Set up simulation box	#
#				#
########		#########

units		real
atom_style	atomic
dimension	3
boundary	p p p

lattice	fcc 6
region		box block 0 4 0 4 0 4
create_box	1 box
create_atoms	1 box

########				#########
#						#
# 2) Define interparticle interactions	#
#						#
########				#########


pair_style	lj/cut 15
pair_modify	shift yes
pair_coeff	1 1 0.75 5.0
mass		1 102.181


neighbor        0.3 bin
neigh_modify    delay 10 every 1


########	 #########
#			 #
# 3) Simulation setup	 #
#			 #
########	 #########

fix 		1 all npt temp 373.0 373.0 25.0 iso 1.0 1.0  10.0

velocity	all create 373.0 199085 mom no

timestep	0.5

thermo_style	custom step temp press vol density #lx ly lz


run_style	verlet

thermo		1000
run		4000000

#unfix 		1
#fix		1 all nve
#run 		2000000

#dump pos all xyz 10 lj.xyz

dump		2 all custom 10 lj_trajectory_match_npt_test.out id mass x y z xu yu zu
dump_modify	2 sort id
dump_modify	2 format line "%d %.2f %.12f %.12f %.12f %.12f %.12f %.12f"

run		10000

