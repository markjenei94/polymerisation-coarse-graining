########		#########
#				#
# 1) Set up simulation box	#
#				#
########		#########

units		real
atom_style	atomic
dimension	3
boundary	p p p

lattice	fcc 11
region		box block 0 3 0 3 0 3
create_box	1 box
create_atoms	1 box
comm_modify       vel yes

########				#########
#						#
# 2) Define interparticle interactions	#
#						#
########				#########

variable vTEMP    equal 453.0

#pair_style	lj/cut 20

pair_style        hybrid/overlay &
                  dpd/tstat ${vTEMP} ${vTEMP} 20. 12345 &
                  table linear 50001

pair_coeff	1 1 table hardener_450.table 1-1
pair_coeff	1 1 dpd/tstat 10

mass		1 102.181


neighbor        0.3 bin
neigh_modify    delay 10 every 1 one 5000


########	 #########
#			 #
# 3) Simulation setup	 #
#			 #
########	 #########


#fix 		1 all npt temp ${vTEMP} ${vTEMP} 25.0 iso 1.0 1.0  10.0

fix               fNVE all nve
fix               fPRESS all press/berendsen iso 300.0 300.0 5000.0 modulus 1000.0

velocity	all create ${vTEMP} 199085 mom no

timestep	5

thermo_style	custom step temp press vol density #lx ly lz


run_style	verlet

thermo		100
run		100000

