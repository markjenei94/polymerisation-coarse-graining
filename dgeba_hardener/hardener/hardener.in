########		#########
#				#
# 1) Set up simulation box	#
#				#
########		#########

units		real
kspace_style	pppm 1.0e-4
atom_style	full
pair_style 	lj/class2/coul/long 12.5
bond_style	class2
angle_style	class2
dihedral_style	class2
improper_style	class2
dimension	3
boundary	p p p

read_data 	hardener.data

neighbor        0.3 bin
neigh_modify    delay 10 every 1

########	 #########
#			 #
# 3) Simulation setup	 #
#			 #
########	 #########

fix 		1 all npt temp 303.0.0 303.0 25.0 iso 1.0 1.0  10.0

velocity	all create 303.0 199085 mom no

timestep	0.5

thermo_style	custom step temp press vol density


run_style	verlet

thermo		100
run		10000

#unfix 		1
#fix		1 all nve
#run 		20000

#dump 		pos all xyz 1 lj.xyz


#dump		2 all custom 30 hardener_npt_msd_test.out id mass mol x y z xu yu zu
#dump_modify	2 sort id  
#dump_modify	2 format line "%d %.2f %d %.12f %.12f %.12f %.12f %.12f %.12f"

compute		msd all msd com yes
fix		msd all ave/time 1 1 2500 c_msd[4] file hardener_npt_msd_builtin_hi.out


run		200000


